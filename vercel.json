{
  "projects": [
    {
      "src": "client",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server",
      "use": "@vercel/node"
    }
  ],
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "client/build/$1" }
  ]
}
